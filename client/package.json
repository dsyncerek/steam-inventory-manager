{
  "name": "steam-inventory-manager-client",
  "version": "1.0.0",
  "scripts": {
    "start": "ng serve",
    "build": "ng build --prod",
    "format": "prettier src/**/*.{ts,scss,html} --write",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint src/**/*.ts --fix",
    "lint:styles": "stylelint src/**/*.scss --fix",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": ["prettier --write", "eslint --fix", "git add"],
    "src/**/*.scss": ["prettier --write", "stylelint --fix", "git add"],
    "src/**/*.html": ["prettier --write", "git add"]
  },
  "dependencies": {
    "@angular/animations": "^8.2.4",
    "@angular/common": "^8.2.4",
    "@angular/compiler": "^8.2.4",
    "@angular/core": "^8.2.4",
    "@angular/forms": "^8.2.4",
    "@angular/platform-browser": "^8.2.4",
    "@angular/platform-browser-dynamic": "^8.2.4",
    "@angular/router": "^8.2.4",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.10.0",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.2",
    "@angular/cli": "^8.3.2",
    "@angular/compiler-cli": "^8.2.4",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-standard-with-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "typescript": "~3.5.3"
  }
}
